<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  	<!-- 是否取得焦点 -->
    <item android:state_focused="true" android:drawable="@drawable/chatto_bg_pressed" />
    <!-- 是否按下 -->
    <item android:state_pressed="true" android:drawable="@drawable/chatto_bg_pressed" />
    <!-- 是否被选中 -->
    <item android:state_selected="true" android:drawable="@drawable/chatto_bg_pressed" />
    <!-- 显示的资源 -->
    <item android:drawable="@drawable/chatto_bg_normal" />
</selector>