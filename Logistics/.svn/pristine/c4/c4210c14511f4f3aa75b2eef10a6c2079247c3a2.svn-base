<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_sender"
        layout="@layout/title_layout" />

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/horizontal_line" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tab_bg_drawable"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/main_radioButton_game"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_login_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="未派送订单"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/main_radioButton_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/tab_regist_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="实时跟踪"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="18dp" />
    </LinearLayout>

 

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.03" >
    </FrameLayout>

</LinearLayout>