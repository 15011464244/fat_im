<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/main_chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="聊天窗口"
            android:textColor="@color/black"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:id="@+id/top_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/top"
        android:background="@drawable/horizontal_line" />
    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f3eff1"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:listSelector="#00000000"
       android:layout_above="@+id/bottom"
        android:layout_below="@+id/top_line"
        android:transcriptMode="alwaysScroll"
        android:visibility="visible" />

    <RelativeLayout 
        android:id="@+id/list_linear"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_line"
        android:layout_below="@+id/top_line"
        android:visibility="gone"
        >
    </RelativeLayout>
    <!-- <View
        android:id="@+id/bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/bottom"
        android:background="#99" /> -->

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_no_corner_without_bottom"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/tool"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/voice"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:background="@drawable/image_chat_voice_normal"
                android:visibility="visible" />
            <!-- 1==========================文字语音切换================================== -->

            <EditText
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/emotion"
                android:layout_toRightOf="@+id/voice"
                android:background="@drawable/image_chat_edit"
                android:ems="10"
                android:maxLines="3" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/emotion"
                android:layout_toRightOf="@+id/voice"
                android:background="@drawable/image_chat_edit"
                android:text="松开发送"
                android:textSize="16sp"
                android:visibility="gone"
                android:enabled="false" />
            <Button
                android:id="@+id/speak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/emotion"
                android:layout_toRightOf="@+id/voice"
                android:background="@drawable/image_chat_edit"
                android:text="按住说话"
                android:textSize="16sp"
                android:visibility="gone" />
            <!-- 1==========================文字语音切换================================== -->

            <ImageView
                android:id="@+id/emotion"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/switch_add"
                android:src="@drawable/image_chat_emotion_normal" />

            <!-- 2==========================添加发送切换================================== -->

            <RelativeLayout
                android:id="@+id/switch_add"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/other"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/image_chat_other_normal" />

                <TextView
                    android:id="@+id/send"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:background="#ff9803"
                    android:gravity="center"
                    android:text="发送"
                    android:textColor="#ffffff"
                    android:visibility="gone" />
            </RelativeLayout>

            <!-- 2==========================添加发送切换================================== -->
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/emotion_gridview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/tool"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/white"
            android:paddingBottom="5dip"
            android:visibility="gone" >

            <View
                android:id="@+id/emotion_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/horizontal_line" />

            <com.ems.express.frame.widget.emotion.FaceLayout
                android:id="@+id/single_emotion"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:layout_below="@+id/emotion_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other_tool"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/tool"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/white"
            android:paddingBottom="5dip"
            android:visibility="gone" >

            <View
                android:id="@+id/other_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/horizontal_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/camera"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/image_chat_other_camera" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="拍照"
                            android:textColor="#616161"
                            android:textSize="18sp" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:id="@+id/picture"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/image_chat_other_picture" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="照片"
                            android:textColor="#616161"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/phrases"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/image_chat_other_phrases" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:text="常用语"
                            android:textColor="#616161"
                            android:textSize="18sp" />
                    </LinearLayout>

                   <!--  <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >
                    </LinearLayout> -->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@+id/tool"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@color/white"
            android:paddingBottom="5dip"
            android:visibility="gone" >

            <View
                android:id="@+id/add_line"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/horizontal_line" />
        
        <ListView
                android:id="@+id/common_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f3eff1"
                android:cacheColorHint="#00000000"
                android:layout_below="@id/add_line"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:transcriptMode="alwaysScroll"
                android:visibility="visible" >
            </ListView>
            </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>