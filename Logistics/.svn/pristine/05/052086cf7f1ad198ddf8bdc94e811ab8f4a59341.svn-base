 <LinearLayout
     	android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tab_bg_drawable"
        android:orientation="horizontal"
        android:padding="2dp" >

     
     <RelativeLayout 
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         >
         <TextView
            android:id="@+id/message_deliver"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/tab_login_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="收件消息"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="18dp" />
         
         <TextView
                android:id="@+id/ccc"
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="18dp"
                android:layout_alignParentBottom="true"
               />

            <ImageView
                android:id="@+id/message_cirle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_above="@+id/ccc"
                android:layout_toLeftOf="@+id/ccc"
                android:background="@drawable/message_circle" />
         
     </RelativeLayout>
     
          
     <RelativeLayout 
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         >
         
         <TextView
            android:id="@+id/message_message"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/tab_regist_selector"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="寄件通知"
            android:textColor="@drawable/tab_text_selector"
            android:textSize="18dp" />
         
         
         <TextView
                android:id="@+id/aaaa"
                android:layout_width="40dp"
                android:layout_height="17dp"
                android:layout_marginLeft="18dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
               />

            <ImageView
                android:id="@+id/fragment_circle"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_above="@+id/aaaa"
                   android:layout_toLeftOf="@+id/aaaa"
                android:background="@drawable/message_circle" />
         
     </RelativeLayout>
       
    </LinearLayout>

