<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_sender"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/main_radioButton_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="派揽消息"
                android:textColor="@drawable/tab_text_selector2"
                android:textSize="18sp"
                />
            <ImageView 
		        android:id="@+id/iv_show_send_font"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/img_jifen_font"
		        android:layout_alignParentBottom="true"
		        android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_new_message1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message_new"
                android:gravity="center"
                 android:layout_alignParentRight="true"
                android:text="99"
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#d5d5d5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/main_radioButton_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="寄达消息"
                android:textColor="@drawable/tab_text_selector2"
                android:textSize="18sp"
                 />
			  <ImageView 
		        android:id="@+id/iv_show_arrive_font"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/img_jifen_font"
		        android:layout_alignParentBottom="true"
		        android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_new_message2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message_new"
                android:gravity="center"
                 android:layout_alignParentRight="true"
                android:text="99"
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>
        
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#d5d5d5" />
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/other_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="其他消息"
                android:textColor="@drawable/tab_text_selector2"
                android:textSize="18sp"
                 />
			  <ImageView 
		        android:id="@+id/iv_show_other_font"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:src="@drawable/img_jifen_font"
		        android:layout_alignParentBottom="true"
		        android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_new_message3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/message_new"
                android:gravity="center"
                android:text="99"
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_margin_no" />

    <FrameLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.03" >
    </FrameLayout>

</LinearLayout>