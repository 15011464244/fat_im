<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5" >

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="13dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="评价"
            android:textColor="#000000"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/horizontal_line" />
    </RelativeLayout>
    <EditText android:ems="10" android:id="@+id/editText1" android:layout_width="match_parent" android:layout_height="180dp" android:layout_marginLeft="35dp" android:layout_marginRight="35dp" android:layout_marginTop="18dp" android:background="@drawable/bg_edit_comment" android:gravity="left" android:hint="请对此次配送做出评价" android:padding="8dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_height="50dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:text="星级评价："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBar1"
            style="@style/roomRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/textView1"
            android:numStars="5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/test_adapter_icon2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="您的评价对我们很重要，方便我们更好的为您服务"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        style="@style/BtnStyle"
        android:layout_margin="@dimen/padding_20"
        android:text="提交" />
    
     <!-- 菊花小人 -->
    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/comment_chrysanthemum"
            android:layout_width="104dp"
            android:layout_height="100dp" 
			android:layout_centerInParent="true"
          	/>
    </RelativeLayout>

</LinearLayout>