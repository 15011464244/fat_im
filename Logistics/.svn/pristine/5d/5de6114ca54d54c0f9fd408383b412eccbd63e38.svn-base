    <!-- bottom start -->
     <LinearLayout 
         android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
    	android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottom_bg">
        <LinearLayout 
            android:id="@+id/ll_tosearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="3dp">
            <ImageView
                android:id="@+id/iv_b1"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/bottom_search_selector"/>
            <TextView 
                 android:id="@+id/tv_b1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="查件"/>
        </LinearLayout>
          <LinearLayout 
            android:id="@+id/ll_tohome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="3dp">
            <ImageView
                 android:id="@+id/iv_b2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/bottom_home_selector"/>
            <TextView 
                 android:id="@+id/tv_b2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="首页"/>
        </LinearLayout>
         <LinearLayout 
            android:id="@+id/ll_topersonal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="3dp">
            <ImageView
                 android:id="@+id/iv_b3"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:src="@drawable/bottom_personal_selector"/>
            <TextView 
                 android:id="@+id/tv_b3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:text="我的"
                android:gravity="center"
                />
        </LinearLayout>
        
    </LinearLayout>
    
    
    <!-- bottom end  -->

</RelativeLayout>

    
