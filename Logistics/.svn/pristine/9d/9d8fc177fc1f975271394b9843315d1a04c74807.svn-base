<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_15"
    android:background="#B8B8B8">

    <TextView
        android:id="@+id/btn_tack_photo"
        style="@style/CameraBtnStyle"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@color/black"
        android:text="@string/C_TACK_PHOTO" />

    <TextView
        android:id="@+id/btn_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_below="@id/btn_tack_photo"
        style="@style/CameraBtnStyle"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/padding_15"
        android:text="@string/C_SELECT_IMAGE" />

    <TextView
        style="@style/CameraBtnStyle"
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:textColor="@color/black"
        android:layout_marginBottom="@dimen/padding_15"
        android:layout_below="@id/btn_select_image"
        android:layout_marginTop="@dimen/padding_15"
        android:text="@string/C_CANCEL" />

</RelativeLayout>