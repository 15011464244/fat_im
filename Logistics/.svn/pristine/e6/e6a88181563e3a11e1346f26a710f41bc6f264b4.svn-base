<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white" 
    tools:context="${relativePackage}.${activityClass}" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >
     
   <TextView 
       android:id="@+id/tv_history_item"
       android:layout_width="210dp"
  	   android:layout_height="50dp"
       android:textSize="18sp"
       android:singleLine="true"
       android:textColor="#88000000"
       android:gravity="center_vertical"
       android:layout_marginLeft="30dp"    
       android:text="运单号：111111111"
       />
   
  <LinearLayout 
       android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    
    android:gravity="center_vertical|right">
   
  <!-- 催单 -->
     <TextView 
       android:id="@+id/tv_history_urge"
       android:layout_width="55dp"
  	   android:layout_height="50dp"
       android:textSize="18sp"
       android:singleLine="true"
       android:background="@drawable/btn_deliv_fragment_selector"
       android:textColor="@drawable/textview_text_press" 
       android:gravity="center" 
       android:text="催单"
       />
   
  <!--中线 -->
     <View
       android:id="@+id/tv_middle_line"
       android:layout_width="0.5dp"
  	   android:layout_height="40dp"
       android:singleLine="true"
       android:gravity="center" 
       android:background="@color/orange" 
       />
      <!-- 退单 -->
     <TextView 
       android:id="@+id/tv_history_invalid"
       android:layout_width="55dp"
  	   android:layout_height="50dp"
       android:textSize="18sp"
       android:singleLine="true"
       android:background="@drawable/btn_deliv_fragment_selector"
       android:textColor="@drawable/textview_text_press" 
       android:gravity="center" 
       android:text="退单"
       android:layout_marginRight="10dp"
       /> 
     </LinearLayout> 
     
       
      <!--  <TextView 
       android:id="@+id/tv_history_item"
       android:layout_width="fill_parent"
  	   android:layout_height="50dp"
       android:textSize="18sp"
       android:singleLine="true"
       android:textColor="#88000000"
       android:gravity="center_vertical"
       android:layout_marginLeft="30dp"    
       android:text="运单号：111111111"
       /> -->
  
</LinearLayout>

<View 
       android:id="@+id/v_divline"
       android:layout_width="fill_parent"
  	   android:layout_height="0.5dp"
  	   android:layout_marginLeft="10dp"
  	   android:layout_marginRight="10dp"
  	   android:layout_alignParentBottom="true"
  	   android:background="@drawable/horizontal_line"
  	   />

</RelativeLayout>