<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="@color/white"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="请选择付款方式"
            android:gravity="center"
            android:textSize="15sp" 
            android:textColor="@color/darkgray"
            />
    </LinearLayout>
    <View style="@style/line_margin_no"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="98元"
            android:gravity="left"
            android:textColor="#666"
            android:textSize="20sp" 
            />
    </LinearLayout>
    <View style="@style/line_margin_no"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_wx"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_wx"
            />
        <LinearLayout 
            android:layout_toRightOf="@+id/iv_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wx_title"
                android:text="微信支付"
                android:textSize="20dp"
                android:textColor="#666"
                
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_wx_content"
                android:text="微信安全支付"
                android:textSize="15dp"
                
                />
        </LinearLayout>
        <ImageView 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_wx_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nocolor"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
<View style="@style/line_margin_no"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_zfb"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_zfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_zfb"
            />
        <LinearLayout 
            android:layout_toRightOf="@+id/iv_zfb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
           
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_zfb_title"
                android:text="支付宝支付"
                android:textSize="20dp"
                android:textColor="#666"
                
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_zfb_content"
                android:text="支付宝钱包"
                android:textSize="15dp"
                
                />
        </LinearLayout>
        <ImageView 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_zfb_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nocolor"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View style="@style/line_margin_no"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rl_money"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        
        >
        <ImageView 
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_face2face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/payment_money"
            />
        <LinearLayout 
            android:layout_toRightOf="@+id/iv_face2face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            >
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_f2f_title"
                android:text="现金支付"
                android:textSize="20dp"
                android:textColor="#666"
                
                />
            <TextView 
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_f2f_content"
                android:text="现金付款"
                android:textSize="15dp"
                
                />
        </LinearLayout>
        <ImageView 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/iv_face2face_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nocolor"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <View style="@style/line_margin_no"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        >
        <Button 
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:id="@+id/btn_cancel"
            
           android:background="@drawable/makecancel"
            />
        <Button 
            android:layout_alignParentRight="true"
            android:id="@+id/btn_makesure"
            android:layout_marginRight="10dp"
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@drawable/makesure"
            />
    </RelativeLayout>
   
</LinearLayout>