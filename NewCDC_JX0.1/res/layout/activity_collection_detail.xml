<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title_function_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="@color/gree_my"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/deliver_back"
            android:layout_width="@dimen/titleHeight"
            android:layout_height="fill_parent"
            android:background="@drawable/selector_back"
            android:onClick="myonClick" />

        <TextView
            android:id="@+id/textView_title_function_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="揽收详情"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/shidp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="订单号: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_client_reservenum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="姓名 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_clientname"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="电话 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_clientphone"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="地址 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_clientaddress"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="时间 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_clientlssx"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="时间 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_clientcnday"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="时间 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_client_createtime"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="距离 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_client_distance"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>
               <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/scrollview_margin"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/bashidp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="业务类型 : "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_client_type"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/txt_background"
                    android:gravity="center_vertical"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>