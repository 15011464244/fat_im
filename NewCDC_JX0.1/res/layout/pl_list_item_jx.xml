<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_task_list"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin" >

    <LinearLayout
        android:id="@+id/mes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名：\t\t"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/clientname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name"
                    android:text="张三"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/clientname"
                    android:gravity="right"
                    android:textColor="@color/red"
                    android:textSize="@dimen/textSizeNormal"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/lssx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:12:21"
                    android:textColor="@color/gree_my"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading10" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话：\t\t"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeNormal" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/phone"
                    android:text="12345678988"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout_Remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/cnday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户催单"
                    android:textColor="@color/gree_my"
                    android:textSize="@dimen/textSizeNormal" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：\t\t"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/address"
                android:text="邮政信息大厦"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pading10"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mailnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：\t\t"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/tv_mailnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/mailnum"
                android:text="12345789"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/tv_sendType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_mailnum"
                android:text="(紧急)"
                android:textColor="@color/red"
                android:textSize="@dimen/textSizeNormal"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_xianshi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading10" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" >

            <Button
                android:id="@+id/btn_phone"
                android:layout_width="@dimen/bashidp"
                android:layout_height="@dimen/sizhidp"
                android:layout_marginRight="@dimen/wudp"
                android:layout_marginTop="@dimen/wudp"
                android:background="@drawable/selector_deliver_task"
                android:text="打电话"
                android:textColor="@drawable/selector_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top" >

                <Button
                    android:id="@+id/btn_phone_count"
                    android:layout_width="@dimen/marginbottom_count"
                    android:layout_height="@dimen/marginbottom_count"
                    android:background="@drawable/red_circle_small"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizemin"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <Button
                android:id="@+id/btn_message"
                android:layout_width="@dimen/bashidp"
                android:layout_height="@dimen/sizhidp"
                android:layout_marginRight="@dimen/wudp"
                android:layout_marginTop="@dimen/wudp"
                android:background="@drawable/selector_deliver_task"
                android:text="发短信"
                android:textColor="@drawable/selector_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top" >

                <Button
                    android:id="@+id/btn_message_count"
                    android:layout_width="@dimen/marginbottom_count"
                    android:layout_height="@dimen/marginbottom_count"
                    android:background="@drawable/red_circle_small"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizemin"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" >

            <Button
                android:id="@+id/btn_fastCollection"
                android:layout_width="@dimen/bashidp"
                android:layout_height="@dimen/sizhidp"
                android:layout_marginRight="@dimen/wudp"
                android:layout_marginTop="@dimen/wudp"
                android:background="@drawable/selector_deliver_task"
                android:text="揽收"
                android:textColor="@drawable/selector_btn" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|top" >

                <Button
                    android:id="@+id/btn_fastCollection_count"
                    android:layout_width="@dimen/marginbottom_count"
                    android:layout_height="@dimen/marginbottom_count"
                    android:background="@drawable/red_circle_small"
                    android:focusable="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSizemin"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_yancang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pading10"
        android:visibility="gone" >

        <Button
            android:id="@+id/btn_queding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizhidp"
            android:layout_marginRight="@dimen/wudp"
            android:layout_marginTop="@dimen/wudp"
            android:background="@drawable/selector_deliver_task"
            android:text="确认"
            android:textColor="@drawable/selector_btn" />
    </RelativeLayout>

</LinearLayout>