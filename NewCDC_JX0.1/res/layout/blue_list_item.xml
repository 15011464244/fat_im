<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/shidp" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/shidp"
        android:layout_marginRight="@dimen/shidp"
        android:background="@drawable/blue_phone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/bluetooth_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/TextSize_listView"
            android:textColor="#666666"
            android:text="三星" />

        <TextView
            android:id="@+id/bluetooth_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:textSize="@dimen/TextSize_listView"
            android:textColor="#666666"
            android:gravity="center_vertical"
            android:text="10:00：ce：95" />
    </LinearLayout>

</LinearLayout>