<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ccc" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_ok_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scrollview_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/baidp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="签收情况 : "
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/sign_state_detail_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/txt_background"
            android:gravity="center_vertical"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_err_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scrollview_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/baidp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="未妥投原因: "
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/undlv_reason_detail_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/txt_background"
                android:gravity="center_vertical"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/scrollview_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="@dimen/baidp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="下一步动作 : "
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <TextView
                android:id="@+id/undlv_nextstep_detail_activity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/txt_background"
                android:gravity="center_vertical"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_dlv_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/scrollview_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="@dimen/baidp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:text="投递日期: "
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:id="@+id/dlv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/txt_background"
            android:gravity="center_vertical"
            android:textColor="@color/dialog_text"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>

</LinearLayout>