<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_dialogall"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title_dialog_userexit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_margin="@dimen/map_margin"
        android:gravity="center"
        android:text="注销"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeBig" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_divider"
        android:background="@color/glay" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_middle_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/map_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="退出登录后，您将无法使用投递与揽收功能，是否确定退出"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_middle_margin"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="1"
                 >

                <Button
                    android:id="@+id/info_cancel"
                    style="@style/button_sel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_selecter"
                    android:text="否"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@drawable/edit_bac"
                android:orientation="horizontal"
                android:visibility="invisible" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/info_sure"
                    style="@style/button_sel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_selecter"
                    android:text="是"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>