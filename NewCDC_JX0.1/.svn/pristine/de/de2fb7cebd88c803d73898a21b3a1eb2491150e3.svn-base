<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/jiqian_money_remarks"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_tit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_margin="@dimen/map_margin"
        android:gravity="center"
        android:text="添加联系人"
        android:textColor="@color/black"
        android:textSize="@dimen/textSizeBig" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/map_divider"
        android:background="@color/glay" />

    <LinearLayout
        android:id="@+id/layout_add_content_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/shidp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizhidp"
            android:layout_margin="@dimen/title_left_margin"
            android:background="@drawable/txt_background"
            android:hint="姓名" >
        </EditText>

        <EditText
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizhidp"
            android:layout_margin="@dimen/title_left_margin"
            android:background="@drawable/txt_background"
            android:hint="请输入电话号码" >
        </EditText>

        <EditText
            android:id="@+id/addr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/title_left_margin"
            android:background="@drawable/txt_background"
            android:hint="地址"
            android:inputType="textMultiLine"
            android:minLines="2" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ershidp"
        android:layout_marginLeft="@dimen/ershidp"
        android:layout_marginRight="@dimen/ershidp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dia_btn_ok"
            style="@style/button_sel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizhidp"
            android:layout_weight="1"
            android:background="@drawable/button_selecter"
            android:text="完成"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.3" />

        <Button
            android:id="@+id/dia_btn_not"
            style="@style/button_sel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizhidp"
            android:layout_weight="1"
            android:background="@drawable/button_selecter"
            android:text="取消"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>

</LinearLayout>