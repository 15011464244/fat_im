<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/weiwhite"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/left_margin"
        android:layout_marginTop="@dimen/left_margin" >

        <TextView
            android:id="@+id/name_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:text="面单:"
            android:textColor="@color/black"
            android:textSize="@dimen/TextSize_listView" />

        <EditText
            android:id="@+id/othermoney_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_weight="3"
            android:background="@drawable/edit_bac"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:textColor="@color/glay_script"
            android:textSize="@dimen/TextSize_listView" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="元"
            android:textSize="@dimen/TextSize_listView" />
    </LinearLayout>

</LinearLayout>