<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/groutitem_height"
    android:background="@drawable/selector_dialog"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/groupname_padding"
    android:paddingRight="@dimen/groupname_padding" >

    <TextView
        android:id="@+id/tv_group_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/groutitem_height"
        android:background="@null"
        android:ems="6"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="全部"
        android:textColor="@color/gree_my" />

    <TextView
        android:id="@+id/tv_group_num"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/groutitem_height"
        android:background="@null"
        android:gravity="right"
        android:singleLine="true"
        android:text="(2)"
        android:textColor="@color/gree_my" />

</LinearLayout>