<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/title_layout2" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
             >

            <ImageView
                android:id="@+id/fragment_count_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/censcus_icon" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fragment_count_button1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_margin_left_right"
                android:layout_marginRight="@dimen/setting_margin_left_right"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_btn_big"
                android:text="妥投"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeNormal" />
             <Button
                android:id="@+id/fragment_count_button4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_margin_left_right"
                android:layout_marginRight="@dimen/setting_margin_left_right"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn_big"
                android:text="待处理"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeNormal" />

            <Button
                android:id="@+id/fragment_count_button2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_margin_left_right"
                android:layout_marginRight="@dimen/setting_margin_left_right"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn_big"
                android:text="未妥投"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeNormal" />

            <Button
                android:id="@+id/fragment_count_button3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_margin_left_right"
                android:layout_marginRight="@dimen/setting_margin_left_right"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn_big"
                android:text="已揽收"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeNormal" />
            
            <Button
                android:id="@+id/fragment_count_button5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/setting_margin_left_right"
                android:layout_marginRight="@dimen/setting_margin_left_right"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_btn_big"
                android:text="未揽收"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>