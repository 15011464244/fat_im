<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pic="http://schemas.android.com/apk/res/com.ems.logistics"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="2dp" >

    <RelativeLayout
        android:layout_width="60dp"
        android:layout_height="60dp" >

        <com.newcdc.ui.RoundImageView
            android:id="@+id/image"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/headimg" />

        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/red_circle_small"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="18dp"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="测试好友1"
                android:textColor="#ff9803"
                android:textSize="16sp"
                android:typeface="sans" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical|right"
                android:textColor="#ff9803"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1测试信息1"
            android:textColor="#feb149"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@drawable/line" />
    </LinearLayout>

</LinearLayout>