<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_function_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="@color/gree_my" >

        <ImageView
            android:id="@+id/btn_back_function_2"
            android:layout_width="@dimen/titleHeight"
            android:layout_height="fill_parent"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/textView_title_function_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="客户管理"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <Button
            android:id="@+id/btn_saoma_content_1"
            android:layout_width="@dimen/titleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_defults" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/glay_bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/wushidp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/badp"
            android:layout_marginLeft="@dimen/sanshi"
            android:layout_marginRight="@dimen/sanshi"
            android:layout_marginTop="@dimen/badp"
            android:background="@drawable/edit_bac"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/scrollview_margin"
                android:layout_marginRight="@dimen/scrollview_margin"
                android:src="@drawable/search" />

            <EditText
                android:id="@+id/reason"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入查询条件"
                android:singleLine="true" >
            </EditText>

            <Button
                android:id="@+id/cha"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_btn_sounds"
                android:padding="@dimen/scrollview_margin" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/telnum"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:divider="@drawable/listview_line"
        android:fadingEdge="none"
        android:footerDividersEnabled="true"
        android:listSelector="@color/transparent"
        android:padding="10dp"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>