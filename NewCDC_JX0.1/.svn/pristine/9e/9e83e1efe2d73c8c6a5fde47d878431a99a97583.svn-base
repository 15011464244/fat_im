<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jiqian_money_remarks"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/login_middle_margin"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/custom_dia_centercall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="请手动添加邮件号 "
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeBig" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_middle_margin"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/mainmail"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/text_h"
                android:layout_weight="1"
                android:background="@drawable/txt_background"
                android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-_"
                android:hint="请输入邮件号"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_middle_margin"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/custom_dia_centercall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="目前添加订单个数:"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/geshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="0"
                    android:textColor="@color/dialog_text"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_middle_margin"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/info_cancel_shoudong"
                    style="@style/button_sel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_selecter"
                    android:text="添加"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:background="@drawable/edit_bac"
                android:orientation="horizontal"
                android:visibility="invisible" >
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sizhidp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/info_sure_shoudong"
                    style="@style/button_sel"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/button_selecter"
                    android:text="完成"
                    android:textSize="@dimen/textSizeNormal" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>