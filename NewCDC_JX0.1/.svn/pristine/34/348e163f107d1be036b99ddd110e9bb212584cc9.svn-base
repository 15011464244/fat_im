<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jiqian_money_remarks"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_middle_margin"
        android:layout_marginLeft="@dimen/login_middle_margin"
        android:layout_marginRight="@dimen/login_middle_margin"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_margin="@dimen/map_margin" >

            <ImageView
                android:layout_width="@dimen/title_height"
                android:layout_height="@dimen/title_height"
                android:src="@drawable/jigouhao" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:gravity="center"
                android:text="绑定机构"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeBig" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_middle_margin"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edt_orgcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_compnum"
                android:inputType="number"
                android:maxLength="8"
                android:singleLine="true"
                android:background="@drawable/txt_background"
                android:textColor="@color/dialog_text"
                android:textSize="@dimen/textSizeNormal" />

            <Button
                android:id="@+id/info_sure"
                style="@style/button_sel"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/login_middle_margin"
                android:background="@drawable/button_bunding_selecter"
                android:text="确认保存"
                android:textSize="@dimen/textSizeNormal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>