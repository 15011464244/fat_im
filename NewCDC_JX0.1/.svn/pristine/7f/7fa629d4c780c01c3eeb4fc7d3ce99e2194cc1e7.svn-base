<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleHeight"
        android:background="@color/gree_my" >

        <ImageView
            android:id="@+id/btn_back_bluetooth"
            android:layout_width="@dimen/titleHeight"
            android:layout_height="fill_parent"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/textView_title_function_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="蓝牙设置"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />

        <Button
            android:id="@+id/btn_saoma_content_1"
            android:layout_width="@dimen/titleHeight"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_defults"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bluetooth_write"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/shidp"
            android:text="可用设备"
            android:layout_marginTop="@dimen/shidp"
            android:textColor="#333333" />

        <ListView
            android:id="@+id/lst_bluetooths"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null" >
        </ListView>
    </LinearLayout>

</LinearLayout>