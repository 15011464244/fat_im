<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginRight="@dimen/left_margin"
        android:layout_marginTop="@dimen/left_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="面单"
            android:textColor="@color/black"
            android:textSize="@dimen/TextSize_listView" />

        <EditText
            android:id="@+id/item_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_weight="3"
            android:background="@drawable/edit_bac"
            android:focusable="true"
            android:inputType="number"
            android:textColor="@color/glay_script"
            android:textSize="@dimen/TextSize_listView" />

        <TextView
            android:id="@+id/item_rmb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="元"
            android:textSize="@dimen/TextSize_listView" />
    </LinearLayout>

</LinearLayout>