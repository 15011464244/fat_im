<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:background="@color/gree_my"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp" >

            <Button
                android:id="@+id/btn_back_password_install"
                android:layout_width="@dimen/buttonBackWidth"
                android:layout_height="@dimen/buttonBackHeight"
                android:layout_gravity="center"
                android:background="@drawable/selector_back"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView_title_function_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/padding_left"
            android:text="@string/activity_setting_password"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    

    <LinearLayout
        android:id="@+id/ll_yj"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/shidp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shidp"
            android:layout_marginRight="@dimen/setting_margin_left_right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_jiu_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/setting_tx_margin_left"
                android:text="旧密码："
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <EditText
                android:id="@+id/et_jiu_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:layout_toRightOf="@+id/tv_jiu_password"
                android:background="@drawable/txt_background"
                android:inputType="number" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shidp"
            android:layout_marginRight="@dimen/setting_margin_left_right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/setting_tx_margin_left"
                android:text="新密码："
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:layout_toRightOf="@+id/tv_new_password"
                android:background="@drawable/txt_background"
                android:inputType="number" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yujing_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/shidp"
            android:layout_marginRight="@dimen/setting_margin_left_right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_sure_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/setting_tx_margin_left"
                android:text="确认密码："
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeNormal" />

            <EditText
                android:id="@+id/et_sure_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:password="true"
                android:layout_toRightOf="@+id/tv_sure_password"
                android:background="@drawable/txt_background"
                android:inputType="number" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/btn_password_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/setting_margin_left_right"
        android:layout_marginRight="@dimen/setting_margin_left_right"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:background="@drawable/selector_btn_big"
        android:gravity="center"
        android:text="@string/activity_setting_save"
        android:textColor="@color/white"
        android:textSize="@dimen/login_button_txtsize" />

</LinearLayout>